{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "OpenDPP Conformance Report",
  "type": "object",
  "required": ["target", "profile_id", "profile_version", "created_at", "artifacts", "findings", "passed"],
  "properties": {
    "target": {"type": "string"},
    "profile_id": {"type": "string"},
    "profile_version": {"type": "string"},
    "created_at": {"type": "string", "format": "date-time"},
    "passed": {"type": "boolean"},
    "artifacts": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["uri", "sha256", "artifact_type", "size"],
        "properties": {
          "uri": {"type": "string"},
          "sha256": {"type": "string"},
          "content_type": {"type": ["string", "null"]},
          "artifact_type": {"type": "string"},
          "size": {"type": "integer"},
          "metadata": {"type": "object"}
        }
      }
    },
    "findings": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["rule_id", "severity", "message"],
        "properties": {
          "rule_id": {"type": "string"},
          "severity": {"type": "string", "enum": ["info", "warning", "error"]},
          "message": {"type": "string"},
          "evidence": {"type": ["object", "null"]}
        }
      }
    }
  }
}
